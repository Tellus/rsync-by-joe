{
  "name": "rsync-by-joe",
  "version": "0.0.0-development",
  "description": "rsync action that doesn't use Docker",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint .",
    "prepare": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "next",
        "prerelease": true
      },
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      ["@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md",
          "changelogTitle": "Changelog"
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tellus/rsync-by-joe.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "TypeScript",
    "rsync"
  ],
  "author": "Johannes Lindhart Borresen <johannes@the.homestead.dk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Tellus/rsync-by-joe/issues"
  },
  "homepage": "https://github.com/Tellus/rsync-by-joe#readme",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@actions/io": "^1.1.1",
    "chance": "^1.1.7"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@tsconfig/recommended": "^1.0.1",
    "@types/chance": "^1.1.2",
    "@types/jest": "^26.0.23",
    "@types/semantic-release": "^17.2.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  }
}
